<div class="row">
    <div class="col-sm-9">
        <h1><%= @book[:title] %> by <%= @book[:author] %></h1>
            <% for review in @reviews %>
                <% user = @users_table.where(:id => review[:user_id]).to_a[0] %>
                <h5 class="mt-0"><%= review[:rating] %> out of 5</h5>
                <%= review[:comments] %>
                <br>
                Reviewed by <%= user[:name] %>
            <% end %>
        <p class="mt-5">
            <a href="/books/<%= @book[:id] %>/reviews/new" class="btn btn-primary">Write your review!</a>
        </p>
</div>